<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81BD83"
    tools:context=".Activities.NewsDetailActivity">

  <Button
      android:id="@+id/btnDelete"
      android:layout_width="104dp"
      android:layout_height="48dp"
      android:layout_marginTop="68dp"
      android:background="@drawable/oval_button_background"
      android:text="Delete"
      android:textColor="#FFFFFF"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.762"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.836" />

  <Button
      android:id="@+id/btnUpdate"
      android:layout_width="101dp"
      android:layout_height="48dp"
      android:background="@drawable/oval_button_background"
      android:text="Update"
      android:textColor="#FFFFFF"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.206"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.852" />

  <TextView
      android:id="@+id/newsIdView"
      android:layout_width="331dp"
      android:layout_height="40dp"
      android:text="News Details"
      android:textAlignment="center"
      android:textColor="#FFFFFF"
      android:textSize="27sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.493"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.087" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="80dp"
      android:layout_height="27dp"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="News Title"
      android:textColor="@color/black"
      android:textSize="15sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.078"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.262" />

  <EditText
      android:id="@+id/tvNwsTit"
      android:layout_width="359dp"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:background="#FDFDFD"
      android:gravity="center"
      android:text=""
      android:textColor="@color/black"

      android:textSize="15sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.311" />

  <TextView
      android:layout_width="143dp"
      android:layout_height="32dp"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="News Description"
      android:textColor="@color/black"
      android:textSize="15sp"


      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.097"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.44" />

  <EditText
      android:id="@+id/tvNwsDes"
      android:layout_width="356dp"
      android:layout_height="180dp"
      android:layout_gravity="center"
      android:background="#FFFEFE"
      android:gravity="center"
      android:text=""
      android:textColor="@color/black"

      android:textSize="15sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.472"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.617" />

  <TextView
      android:id="@+id/tvNwsId"
      android:layout_width="295dp"
      android:layout_height="37dp"
      android:layout_gravity="center"
      android:background="#FDFDFD"
      android:visibility="gone"
      android:gravity="center"
      android:text=""
      android:textColor="@color/black"

      android:textSize="15sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>